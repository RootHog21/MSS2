<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/colors"
    tools:context="omicron.mss.ScheduleScreenActivity">

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/text_box"
        android:editable="false"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Schedule 1"
        android:gravity="center"
        android:textSize="30dp"
        android:id="@+id/save1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/text_box"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Schedule 2"
        android:textColor="#000000"
        android:textSize="30dp"
        android:gravity="center"
        android:editable="false"
        android:id="@+id/save2"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/save1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/text_box"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Schedule 3"
        android:editable="false"
        android:id="@+id/save3"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_below="@+id/save2"
        android:layout_alignLeft="@+id/save2"
        android:layout_alignStart="@+id/save2"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/text_box"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Schedule 4"
        android:editable="false"
        android:textColor="#000000"
        android:id="@+id/save4"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_below="@+id/save3"
        android:layout_alignLeft="@+id/save3"
        android:layout_alignStart="@+id/save3"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/text_box"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Schedule 5"
        android:editable="false"
        android:id="@+id/save5"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_below="@+id/save4"
        android:layout_alignLeft="@+id/save4"
        android:layout_alignStart="@+id/save4"
        android:layout_marginTop="35dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View"
        android:textColor="#000000"
        android:id="@+id/viewButton"
        android:layout_alignTop="@+id/saveButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textColor="#000000"
        android:id="@+id/saveButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textColor="#000000"
        android:id="@+id/deleteButton"
        android:layout_alignTop="@+id/saveButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
